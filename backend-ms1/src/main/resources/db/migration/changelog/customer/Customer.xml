<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="customer">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="first_name" type="VARCHAR(500)"/>
        <column name="last_name" type="VARCHAR(500)"/>
        <column name="phone_number" type="VARCHAR(500)"/>
        <column name="credentials_non_expired" type="TINYINT"/>
        <column name="account_non_expired" type="TINYINT"/>
        <column name="username" type="VARCHAR(500)"/>
        <column name="password_changed" type="TINYINT"/>
        <column name="account_non_locked" type="TINYINT"/>
        <column name="password" type="VARCHAR(500)"/>
        <column name="email" type="VARCHAR(500)"/>
        <column name="enabled" type="TINYINT"/>

        <column name="address_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="customer"
              baseColumnNames="address_id"
              referencedTableName="address"
              referencedColumnNames="id"
              constraintName="fk_customer_address"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="customer_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/customer/Customer.csv"
            tableName="customer">
      <column name="id" type="NUMERIC"/>
          <column name="first_name" type="STRING"/>
          <column name="last_name" type="STRING"/>
          <column name="phone_number" type="STRING"/>
          <column name="credentials_non_expired" type="BOOLEAN"/>
          <column name="account_non_expired" type="BOOLEAN"/>
          <column name="username" type="STRING"/>
          <column name="password_changed" type="BOOLEAN"/>
          <column name="account_non_locked" type="BOOLEAN"/>
          <column name="password" type="STRING"/>
          <column name="email" type="STRING"/>
          <column name="enabled" type="BOOLEAN"/>
        <column name="address" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
